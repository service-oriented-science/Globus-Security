    <profiles>
        <profile>
            <id>clover</id>
            <activation>
                <property>
                    <name>maven.clover.licenseLocation</name>
                </property>
            </activation>
            <build>
                <defaultGoal>verify</defaultGoal>
                <plugins>
                    <plugin>
                        <groupId>com.atlassian.maven.plugins</groupId>
                        <artifactId>maven-clover2-plugin</artifactId>
                        <version>2.6.3</version>
                        <configuration>
                            <excludes>
                                <exclude>**/*Exception.java</exclude>
                            </excludes>
                        </configuration>
                        <executions>
                            <execution>
                                <id>main</id>
                                <phase>verify</phase>
                                <configuration>
                                    <targetPercentage>60%</targetPercentage>
                                </configuration>
                                <goals>
                                    <goal>instrument</goal>
                                    <goal>aggregate</goal>
                                    <goal>check</goal>
                                    <goal>log</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
            <reporting>
                <!--<excludeDefaults>true</excludeDefaults>-->
                <plugins>
                    <plugin>
                        <groupId>com.atlassian.maven.plugins</groupId>
                        <artifactId>maven-clover2-plugin</artifactId>
                        <configuration>
                            <generateHistorical>true</generateHistorical>
                            <generateHtml>true</generateHtml>
                        </configuration>
                    </plugin>
                </plugins>
            </reporting>
        </profile>
        <profile>
            <id>integration-testing</id>
            <build>
                <defaultGoal>verify</defaultGoal>
            </build>
            <modules>
                <module>integration-example</module>
            </modules>
        </profile>
    </profiles>

