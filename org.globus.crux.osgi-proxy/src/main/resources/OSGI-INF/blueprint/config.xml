<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.0.0"
	xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.0.0"
	default-availability="optional">

	<bean id="proxyServiceHook" class="org.globus.crux.osgi.proxy.CruxProxyServiceHook">
		<property name="bundleContext" ref="blueprintBundleContext" />
		<property name="handlers" ref="proxyHandlers" />
	</bean>

	<reference-list id="proxyHandlers" interface="org.globus.crux.osgi.proxy.Handler" />

	<service ref="proxyServiceHook">
		<interfaces>
			<value>org.osgi.framework.hooks.service.EventHook</value>
			<value>org.osgi.framework.hooks.service.FindHook</value>
		</interfaces>
	</service>
</blueprint>