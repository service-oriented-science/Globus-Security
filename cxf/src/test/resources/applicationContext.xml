<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxws="http://cxf.apache.org/jaxws"
       xmlns:cxf="http://cxf.apache.org/core"
       xmlns:globus="http://www.globus.org/schema/security"
       xsi:schemaLocation="
http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">

    <import resource="classpath:META-INF/cxf/cxf.xml"/>
    <import resource="classpath:META-INF/cxf/cxf-extension-soap.xml"/>
    <import resource="classpath:META-INF/cxf/cxf-servlet.xml"/>

    <bean name="serviceObject" class="org.globus.security.HelloWorldImpl"/>

    <jaxws:endpoint id="classImpl"
                    implementor="#serviceObject"
                    endpointName="e:Hello_Port"
                    serviceName="e:Hello_Service"
                    address="/"
                    xmlns:e="http://www.globus.org/hello">
        
        <jaxws:features>
            <cxf:logging/>
            <globus:secureService/>
        </jaxws:features>
        
    </jaxws:endpoint>

</beans>