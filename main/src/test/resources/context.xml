<?xml version="1.0" encoding="UTF-8"?>
<server id="jetty" xmlns="http://www.globus.org/crux/jetty-config"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.globus.org/crux/jetty-config 
	file:///${user.dir}/target/classes/org/globus/crux/crux-jetty.xsd
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<threadPool minSize="10" maxSize="20" />

	<connectors>
		<sslConnector port="12345" requireClientAuthn="true">
			<trustManager>
				<gsi>
					<trustedCertLocations>file:///${user.dir}/src/test/resources/cacert.pem
					</trustedCertLocations>
					<credential>
						<keyLocation>file:///${user.dir}/src/test/resources/userkey.pem
						</keyLocation>
						<certificateLocation>file:///${user.dir}/src/test/resources/usercert.pem
						</certificateLocation>
					</credential>
					<crlLocations>file:///${user.dir}/src/test/resources/1c3f2ca8.r0
					</crlLocations>
					<signingPolicyLocations>file:///${user.dir}/src/test/resources/globus_crux_ca.signing_policy</signingPolicyLocations>
				</gsi>
			</trustManager>
		</sslConnector>
	</connectors>
</server>
