<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:sec="http://www.globus.org/security/descriptor/container"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.globus.org/security/descriptor/container file:////Users/turtlebender/src/Globus-Security/authorization/src/main/resources/org/globus/security/authorization/xml/container_security_descriptor.xsd">


    <bean id="mockPDP1" class="org.globus.security.authorization.MockPDPImplFactory">
        <property name="issuer" value="Issuer1"/>
        <property name="access">
            <list>
                <value>UserA</value>
            </list>
        </property>
        <property name="denied">
            <list>
                <value>UserD</value>
            </list>
        </property>
    </bean>

    <bean id="mockPDP2" class="org.globus.security.authorization.MockPDPImplFactory">
        <property name="issuer" value="Issuer2"/>
        <property name="access">
            <list>
                <value>UserA</value>
            </list>
        </property>
    </bean>

    <bean id="mockPDP3" class="org.globus.security.authorization.MockPDPImplFactory">
        <property name="issuer" value="Issuer3"/>
        <property name="access">
            <list>
                <value>UserA</value>
            </list>
        </property>
    </bean>

    <sec:containerSecurityConfig>
        <sec:authzChain>
            <sec:pdps>
                <ref bean="mockPDP1"/>
                <ref bean="mockPDP2"/>
                <ref bean="mockPDP3"/>
            </sec:pdps>
        </sec:authzChain>
    </sec:containerSecurityConfig>

</beans>
